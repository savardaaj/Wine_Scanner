<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_wine_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <View
        android:id="@+id/new_wine_entry_container"
        android:layout_width="413dp"
        android:layout_height="540dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txt_barcode"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="173dp"
        android:layout_height="16dp"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_light"
        android:hint="[scan barcode]"
        android:inputType="text"
        android:letterSpacing=".3"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorGreenButton"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_wine_picture" />

    <ImageView
        android:id="@+id/iv_wine_picture"
        android:layout_width="173dp"
        android:layout_height="195dp"
        app:layout_constraintStart_toStartOf="@+id/new_wine_entry_container"
        app:layout_constraintTop_toTopOf="@+id/new_wine_entry_container"
        app:srcCompat="@drawable/ic_wine" />

    <EditText
        android:id="@+id/txtWineName"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="231dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorBackground"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Name..."
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorGreenButton"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/new_wine_entry_container"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_wine_picture"
        app:layout_constraintTop_toTopOf="@+id/new_wine_entry_container" />

    <EditText
        android:id="@+id/txtWineMaker"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="231dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBackground"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Maker..."
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorGreenButton"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_wine_picture"
        app:layout_constraintTop_toBottomOf="@+id/txtWineName" />

    <EditText
        android:id="@+id/txtWineType"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="231dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBackground"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Type..."
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorGreenButton"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/new_wine_entry_container"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_wine_picture"
        app:layout_constraintTop_toBottomOf="@+id/txtWineMaker" />

    <EditText
        android:id="@+id/txtWineYear"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="231dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorBackground"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Year..."
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorGreenButton"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/new_wine_entry_container"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_wine_picture"
        app:layout_constraintTop_toBottomOf="@+id/txtWineType" />

    <EditText
        android:id="@+id/txtWineLocation"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="231dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorBackground"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Location..."
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:textAlignment="viewStart"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorGreenButton"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/rb_main_card_details"
        app:layout_constraintEnd_toEndOf="@+id/new_wine_entry_container"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_wine_picture"
        app:layout_constraintTop_toBottomOf="@+id/txtWineYear"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txt_like_description"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="253dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorBackground"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Location..."
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:text="@string/like_description_none"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorGreenButton"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/new_wine_entry_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWineDescription"
        app:layout_constraintVertical_bias="0.006" />

    <RatingBar
        android:id="@+id/rb_main_card_details"
        android:layout_width="241dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:clickable="false"
        android:focusable="false"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="0"
        android:stepSize=".5"
        app:layout_constraintEnd_toEndOf="@+id/new_wine_entry_container"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/new_wine_entry_container"
        app:layout_constraintTop_toBottomOf="@+id/txt_barcode" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/new_wine_entry_ratings_container"
        android:layout_width="239dp"
        android:layout_height="116dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/new_wine_entry_container"
        app:layout_constraintTop_toBottomOf="@+id/rb_main_card_details">

        <TextView
            android:id="@+id/tv_5star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:text="5 star"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/pb_sub5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_4star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:text="4 star"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/pb_sub4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub5" />

        <TextView
            android:id="@+id/tv_3star"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:text="3 star"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/pb_sub3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub4" />

        <TextView
            android:id="@+id/tv_2star"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:text="2 star"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/pb_sub2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub3" />

        <TextView
            android:id="@+id/tv_1star"
            android:layout_width="42dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_light"
            android:paddingLeft="2dp"
            android:text="1 star"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/pb_sub1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub2" />

        <ProgressBar
            android:id="@+id/pb_sub5"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="131dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:progress="0"
            app:layout_constraintEnd_toStartOf="@+id/tv_sub5"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/pb_sub4"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="131dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:progress="0"
            app:layout_constraintEnd_toStartOf="@+id/tv_sub4"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub5" />

        <ProgressBar
            android:id="@+id/pb_sub3"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="131dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:progress="0"
            app:layout_constraintEnd_toStartOf="@+id/tv_sub3"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub4" />

        <ProgressBar
            android:id="@+id/pb_sub2"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:layout_width="131dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:progress="0"
            app:layout_constraintEnd_toStartOf="@+id/tv_sub2"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub3" />

        <ProgressBar
            android:id="@+id/pb_sub1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="131dp"
            android:layout_height="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_sub1"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub2" />

        <TextView
            android:id="@+id/tv_sub5"
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:fontFamily="@font/comfortaa_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_sub4"
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:fontFamily="@font/comfortaa_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub5" />

        <TextView
            android:id="@+id/tv_sub3"
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:fontFamily="@font/comfortaa_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub4" />

        <TextView
            android:id="@+id/tv_sub2"
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:fontFamily="@font/comfortaa_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub3" />

        <TextView
            android:id="@+id/tv_sub1"
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:fontFamily="@font/comfortaa_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pb_sub2" />

    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/txtWineDescription"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorBackground"
        android:editable="false"
        android:ems="10"
        android:focusable="false"
        android:fontFamily="@font/comfortaa_light"
        android:gravity="top"
        android:hint="Review..."
        android:inputType="textMultiLine"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorGreenButton"
        app:layout_constraintEnd_toEndOf="@+id/new_wine_entry_container"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/new_wine_entry_container"
        app:layout_constraintTop_toBottomOf="@+id/new_wine_entry_ratings_container" />

    <CheckBox
        android:id="@+id/cb_carddetails_isshared"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:buttonTint="@color/colorGreenButton"
        android:clickable="false"
        android:contextClickable="false"
        android:editable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/comfortaa_light"
        android:longClickable="false"
        android:text="Shared"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/new_wine_entry_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtWineDescription"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="28dp"
        android:layout_height="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="onClickToggleRatings"
        app:layout_constraintBottom_toBottomOf="@+id/rb_main_card_details"
        app:layout_constraintEnd_toEndOf="@+id/new_wine_entry_container"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/rb_main_card_details"
        app:layout_constraintTop_toBottomOf="@+id/txtWineLocation"
        app:layout_constraintVertical_bias="0.884"
        app:srcCompat="@android:drawable/arrow_down_float" />

</android.support.constraint.ConstraintLayout>